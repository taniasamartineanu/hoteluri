@page
@model hoteluri.Pages.Hoteluri.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-md-6">
        <div>
            <h4>Hotel</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Hotel.NumeHotel)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Hotel.NumeHotel)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Hotel.Locatie)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Hotel.Locatie)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Hotel.HotelId">Edit</a> |
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>

    <div class="col-md-6">
        <h4>Camere</h4>
        <hr />
        <table class="table">
             <tbody>
                 @foreach (var camera in Model.Hotel.Camere)
                {
                    <tr>
                        <td>
                            @camera.NumarCamera
                        </td>
                    </tr>
                }
            </tbody> 
        </table>
    </div>
</div>
